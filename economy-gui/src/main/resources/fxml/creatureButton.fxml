<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane>
         <children>
            <ImageView fx:id="creatureImage" fitHeight="53.0" fitWidth="74.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../creatures/Black Knight.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <VBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="creatureNameLabel" style="-fx-font-weight: bold;" text="BLACK KNIGHT" underline="true">
               <font>
                  <Font name="System Font" size="13.0" />
               </font>
            </Label>
            <Label fx:id="creatureCostLabel" text="cost: 200" />
         </children>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
